    "jest-circus": "^29.3.1",
    "jest-mock": "^29.3.1",
    "js-yaml": "^4.1.0",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.3",
    "typescript-esbuild": "0.3.6"
  },
  "publishConfig": {
